# JWT Secret for authentication tokens (REQUIRED)
# IMPORTANT: Generate a unique secret for each environment!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# WARNING: Never commit real secrets to version control
JWT_SECRET=your_secure_random_string_here

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3003,https://your-domain.com

# Google OAuth Configuration (used by both client and server)
# Get your credentials from: https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
# GOOGLE_CLIENT_SECRET is required for mobile OAuth redirect flow
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# EmailJS Configuration (optional - for contact form and password reset)
# Get your credentials from: https://www.emailjs.com/
VITE_EMAILJS_SERVICE_ID=your_service_id_here
VITE_EMAILJS_TEMPLATE_ID=your_template_id_here
VITE_EMAILJS_PUBLIC_KEY=your_public_key_here
# Additional for server-side password reset emails
EMAILJS_PRIVATE_KEY=your_private_key_here
EMAILJS_PASSWORD_RESET_TEMPLATE_ID=your_password_reset_template_id

# Google reCAPTCHA v2 Configuration (optional - for contact form)
# Get your keys from: https://www.google.com/recaptcha/admin
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# Gemini API Key for AI coffee bag scanning (optional)
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Website URL for sharing
VITE_APP_URL=https://your-domain.com

# Auto-copy admin equipment and recipes to new users (true/false)
# Set to false to disable copying admin templates on user signup
SEED_USER_DEFAULTS=true

# Template user email - equipment and recipes from this user are copied to new users
# This user's data is also shown in "Copy from templates" when adding equipment
TEMPLATE_USER_EMAIL=admin@admin.com

# Admin emails - comma-separated list of emails that can access the admin dashboard
ADMIN_EMAILS=admin@admin.com
